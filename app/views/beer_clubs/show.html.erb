<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<p><strong>Members:</strong></p>
<% unless @beer_club.memberships.nil? %>
  <ul>
    <% @beer_club.memberships.all.each do |m| %>
    <li><%= m.user.username %></li>
    <% end %>
  </ul>
<% end %>

<p></p>

<% unless current_user.nil? || @beer_club.users.include?(current_user) %>
    <%= form_for(@membership) do |f| %>
        <%= f.hidden_field :beer_club_id, value: @beer_club.id %>
        <%= f.submit value:"join the club" %>
    <% end %>
<% end %>

<%= link_to 'Edit', edit_beer_club_path(@beer_club), class:"btn btn-primary" %>
<%= link_to 'Back', beer_clubs_path, class:"btn btn-primary" %>

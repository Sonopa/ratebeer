<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<% if @beer.ratings.empty? %>
    <p>beer has not been rated</p>
<% else %>
    <p>
        <%= "Has " + pluralize(@beer.ratings.size, 'rating') + " with an average of " + @beer.average_rating %>
    </p>
<% end %>


<%= link_to 'Edit', edit_beer_path(@beer) %> |
<%= link_to 'Back', beers_path %>

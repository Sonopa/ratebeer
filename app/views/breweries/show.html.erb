<% cache @brewery do %>
    <h2><%= @brewery.name %></h2>

    <p>
      <i>Established in
        <%= @brewery.year %>
      </i>
    </p>

    <p>
      <strong>Number of beers:</strong>
      <%= @brewery.beers.count %>
    </p>

    <p>
      <% @brewery.beers.each do |beer| %>
        <%= link_to beer.name, beer %>
      <% end %>
    </p>

    <p>
      <% if @brewery.ratings.size > 0 %>
        <%= "Has " + pluralize(@brewery.ratings.size, 'rating') + " with an average of " + round(@brewery.average_rating).to_s %>
      <% else %>
          <%= "Has " + pluralize(@brewery.ratings.size, 'rating') %>
      <% end %>
    </p>
<% end %>

<%= edit_and_destroy_buttons(@brewery) %>
<%= link_to 'Back', breweries_path, class:"btn btn-primary" %>

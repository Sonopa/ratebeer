<h1>Beer places search</h1>

<%= form_tag places_path do %>
    City: <%= text_field_tag :city, params[:city] %>
    <%= submit_tag "Search" %>
<% end %>

<p id="notice"><%= notice %></p>

<% if @places %>
    <table>
      <thead>
      <% Place.rendered_fields.each do |f| %>
          <td><%=f %></td>
      <% end %>
      </thead>
      <% @places.each do |place| %>
          <tr>
            <% Place.rendered_fields.each do |f| %>
                <% if f.to_s=="name" %>
                    <td><%= link_to place.name, "places/#{place.id}"%></td>
                <% else %>
                    <td><%= place.send(f) %></td>
                <% end %>
            <% end %>
          </tr>
      <% end %>
    </table>
<% end %>
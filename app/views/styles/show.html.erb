<p id="notice"><%= notice %></p>

<h2><%= @style.name %></h2>

<p>
  <strong>Description:</strong>
  <%= @style.description %>
</p>

<p>
  <strong>Beers:</strong>
  <ul>
  <% @style.beers.each do |beer| %>
      <li>
      <%= link_to beer.name, beer %>
      </li>
  <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_style_path(@style), class:"btn btn-primary" unless current_user.nil? %>
<%= link_to 'Back', styles_path, class:"btn btn-primary" %>
